---
import '../styles/global.css';
import '@fontsource/outfit';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { frontmatter } = Astro.props;
const { title, description = "Quality Alfalfa Hay at Rancho La Capillita" } = frontmatter || Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Rancho La Capillita</title>
	</head>
	<body class="bg-stone-50 min-h-screen flex flex-col font-sans text-stone-800">
		<Header />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
