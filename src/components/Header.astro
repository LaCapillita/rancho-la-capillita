<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-xl font-bold text-green-800">Rancho La Capillita</a>
    
    <nav class="hidden md:flex gap-8">
      <a href="/" class="text-stone-700 hover:text-ranch-green font-semibold transition-colors">Home</a>
      <a href="/products" class="text-stone-700 hover:text-ranch-green font-semibold transition-colors">Hay & Products</a>
      <a href="/location" class="text-stone-700 hover:text-ranch-green font-semibold transition-colors">Location</a>
      <a href="/contact" class="px-5 py-2 bg-ranch-green text-white rounded-full hover:bg-ranch-green-dark transition-colors font-medium">Order Now</a>
    </nav>
    
    <button id="mobile-menu-btn" class="md:hidden text-ranch-green p-2 cursor-pointer" aria-label="Toggle Menu">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-ranch-light border-t border-stone-200">
    <nav class="flex flex-col p-4 space-y-4">
      <a href="/" class="text-stone-700 hover:text-ranch-green font-medium">Home</a>
      <a href="/products" class="text-stone-700 hover:text-ranch-green font-medium">Hay & Products</a>
      <a href="/location" class="text-stone-700 hover:text-ranch-green font-medium">Location</a>
      <a href="/contact" class="text-ranch-green font-bold">Contact & Order</a>
    </nav>
  </div>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');

    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</header>
